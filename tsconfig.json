{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "platform/*": [
        "platform/*"
      ],
      "shared/*": [
        "platform/shared/*"
      ],
      "lib/*": [
        "platform/shared/lib/*"
      ],
      "interface/*": [
        "platform/shared/interface/*"
      ],
      "globals": [
        "platform/shared/global.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/todos/index.js"
  ]
}
